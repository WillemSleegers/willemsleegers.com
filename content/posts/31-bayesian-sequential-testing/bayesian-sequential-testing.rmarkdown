```{r}
#| label: setup
#| message: false
library(MASS)
library(tidyverse)
library(brms)

options(
  mc.cores = 4,
  brms.threads = 4,
  brms.backend = "cmdstanr",
  brms.file_refit = "on_change"
)
```

```{r}
#| label: data
is <- 1000
ks <- 3
p_values <- crossing(
  i = 1:is,
  k = 1:ks,
  p = NA
)

for (i in 1:is) {
  data <- tibble()
  for (k in 1:ks) {
    new_data <- tibble(
      control = rnorm(10),
      treatment = rnorm(10)
    )

    data <- bind_rows(data, new_data)

    p_values$p[(i - 1) * ks + k] <- t.test(data$control, data$treatment)$p.value
  }
}

final <- p_values |>
  mutate(
    alpha = 0.05,
    sig = if_else(p < alpha, 1, 0)
  ) |>
  group_by(i) |>
  mutate(
    sum = sum(sig),
    k_sig = if_else(sum == 0, ks, first(k[which(sig == 1)]))
  ) |>
  ungroup() |>
  filter(k == k_sig)

count(final, sig) |>
  mutate(prop = n / sum(n)) |>
  filter(sig == 1) |>
  pull(prop)
```

