@article{pennycook2016bullshit-detection,
	Abstract = {The reception and detection of bullshit has only recently emerged as a subject of empirical study. In this paper I focus on two key questions: 1) How efficient is bullshit detection? and, 2) How robust is the previously reported association between bullshit receptivity and cognitive reflection? Participants were presented with bullshit sentences that consist of randomly selected buzzwords (e.g., ``Wholeness quiets infinite phenomena.''), actual tweets from a self-help guru (e.g., ``Matter is the experience in consciousness of a deeper non-material reality.''), and genuine motivational quotations written in plain language (e.g., ``A wet person does not fear the rain.''). It was made explicit that some of the sentences consisted of random `nonsense' and the task was simply to decide which sentences were meaningful (v. nonsense). Although the bullshit sentences were more likely to be rated as nonsense than meaningful, there was nonetheless a large asymmetry between the frequency of `nonsense' choices for bullshit sentences (61{\%}) and `meaningful' choices for motivational sentences (83.2{\%}). Bullshit detection efficiency was also predicted by the propensity to engage reflective reasoning, extending previous work.},
	Author = {Pennycook, Gordon},
